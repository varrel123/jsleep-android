<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRoom">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetailRoom"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="81dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="600dp">

            <TextView
                android:id="@+id/textDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="199dp"
                android:text="Detail Room"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textNameDetailRoom"
                android:layout_width="43dp"
                android:layout_height="22dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textBedTypeDetailRoom" />

            <TextView
                android:id="@+id/infoNameDetailRoom"
                android:layout_width="97dp"
                android:layout_height="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="38dp"
                android:text="Large"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDetailRoom"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/infoBedTypeDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="38dp"
                android:text="Bram"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoNameDetailRoom"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/infoSizeDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="38dp"
                android:text="40 m2"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoBedTypeDetailRoom"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/infoAddressDetailRoom"
                android:layout_width="270dp"
                android:layout_height="59dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:text="Jalan Raya Pondok Gede"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAddressDetailRoom"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/infoPriceDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="38dp"
                android:text="Rp 2.500.000"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoSizeDetailRoom"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textBedTypeDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="30dp"
                android:text="Bed Type"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDetailRoom" />

            <TextView
                android:id="@+id/textSizeDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:text="Size"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNameDetailRoom" />

            <TextView
                android:id="@+id/textFacilityDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="263dp"
                android:text="Facility"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoAddressDetailRoom"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textAddressDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="260dp"
                android:text="Address"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textPriceDetailRoom"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textPriceDetailRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="20dp"
                android:text="Price"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textSizeDetailRoom"
                tools:ignore="MissingConstraints" />

            <CheckBox
                android:id="@+id/CekBoxWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="84dp"
                android:text="Wifi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textFacilityDetailRoom"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/CekBoxRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="26dp"
                android:text="Restaurant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CekBoxWifi"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/CekBoxBalcony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="22dp"
                android:text="Balcony"
                app:layout_constraintEnd_toStartOf="@+id/CekBoxRestaurant"
                app:layout_constraintStart_toEndOf="@+id/CekBoxBathub"
                app:layout_constraintTop_toBottomOf="@+id/CekBoxRefrigerator"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/CekBoxSwimPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="24dp"
                android:text="Swimming Pool"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CekBoxBathub"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/CekBoxFitCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="24dp"
                android:text="Fitness Center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CekBoxRestaurant"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/CekBoxBathub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="13dp"
                android:text="Bathub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CekBoxAC"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/CekBoxAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="13dp"
                android:text="AC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textFacilityDetailRoom"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/CekBoxRefrigerator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="13dp"
                android:text="Refrigerator"
                app:layout_constraintEnd_toStartOf="@+id/CekBoxWifi"
                app:layout_constraintStart_toEndOf="@+id/CekBoxAC"
                app:layout_constraintTop_toBottomOf="@+id/textFacilityDetailRoom"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>